# ====================================
# CONFIGURACIÓN DE GASTROBOT ORCHESTRATOR
# ====================================

# ===========================
# CONFIGURACIÓN DE OPENAI
# ===========================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ===========================
# CONFIGURACIÓN DEL BACKEND
# ===========================
# URL dinámica del backend - En Railway se configura automáticamente
# Para desarrollo local, usar http://localhost:3002/api
BACKEND_BASE_URL=http://localhost:3002/api
BACKEND_TIMEOUT=30
BACKEND_RETRY_ATTEMPTS=3

# ===========================
# CONFIGURACIÓN DE RESERVAS
# ===========================
DEFAULT_DURATION_MIN=120
MAX_DURATION_MIN=180
MIN_DURATION_MIN=60

# ===========================
# CONFIGURACIÓN DE REDIS
# ===========================
# Redis opcional - usa memoria si no está configurado
REDIS_URL=redis://localhost:6379/0
STATE_TTL_SECONDS=3600

# ===========================
# CONFIGURACIÓN DEL SISTEMA
# ===========================
TIMEZONE=Europe/Madrid
LOG_LEVEL=INFO
CORS_ORIGINS=["*"]

# ===========================
# LÍMITES DEL SISTEMA
# ===========================
MAX_CONVERSATION_LENGTH=50
MAX_MESSAGE_LENGTH=1000

# ===========================
# VARIABLES DE RAILWAY
# ===========================
# Estas variables se configuran automáticamente en Railway
# PORT=8000
# RAILWAY_STATIC_URL=https://tu-proyecto.railway.app
# RAILWAY_PUBLIC_DOMAIN=tu-proyecto.railway.app

# ===========================
# CONFIGURACIÓN MULTI-RESTAURANTE
# ===========================
# Para conectar con diferentes backends por restaurante, configura:
# BACKEND_BASE_URL=https://restaurante-a-backend.railway.app/api (Restaurante A)
# BACKEND_BASE_URL=https://restaurante-b-backend.railway.app/api (Restaurante B)